{
  "name": "spotify-tools",
  "version": "1.0.0",
  "author": "Arthur Fauquenot",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "tsc-watch -p ./tsconfig.build.json --onSuccess \"run-s copy-assets start\"",
    "start": "node ./dist/index.js",
    "build": "run-s clean build:tsc copy-assets",
    "build:tsc": "tsc -p ./tsconfig.build.json",
    "clean": "rimraf ./dist",
    "copy-assets": "cpx 'src/**/*.!(ts)' 'dist'",
    "lint": "tsc -p ./tsconfig.json --noEmit && eslint \"**/*.{js,ts}\" && prettier --check .",
    "lint:fix": "tsc -p ./tsconfig.json --noEmit && eslint \"**/*.{js,ts}\" --fix && prettier --write --ignore-unknown ."
  },
  "lint-staged": {
    "*.{js,ts}": [
      "bash -c tsc --noEmit",
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{json,md,html,yml,yaml,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "axios": "^0.21.1",
    "convict": "^5.2.0",
    "dotenv": "^8.2.0"
  },
  "devDependencies": {
    "@types/convict": "^6.0.1",
    "@types/spotify-api": "0.0.8",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "cpx": "^1.5.0",
    "eslint": "^7.23.0",
    "eslint-config-airbnb-typescript": "^11.4.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^4.3.1",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-node": "^8.10.2",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.2.3"
  },
  "license": "ISC",
  "engines": {
    "node": ">=12"
  }
}
